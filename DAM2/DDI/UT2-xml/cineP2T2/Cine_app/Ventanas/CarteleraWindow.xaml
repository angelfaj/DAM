<Window x:Class="Cine_app.Ventanas.CarteleraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cartelera - CineDAM" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Window.Resources>
        <!-- Estilo para las tarjetas de pelicula -->
        <Style x:Key="PeliculaCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#E50914"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.6" Color="#E50914"/>
                        </Setter.Value>
                    </Setter>
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.05" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.05" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.0" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header (mas oscuro) -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="20" BorderBrush="#2D2D30" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Viewbox Width="35" Height="35" Margin="0,0,15,0">
                        <Canvas Width="24" Height="24">
                            <Path Data="M18,4L20,8H17L15,4H13L15,8H12L10,4H8L10,8H7L5,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V4H18M9.5,16A0.5,0.5 0 0,1 9,15.5V10.5A0.5,0.5 0 0,1 9.5,10H11.5A0.5,0.5 0 0,1 12,10.5V15.5A0.5,0.5 0 0,1 11.5,16H9.5M14.5,16A0.5,0.5 0 0,1 14,15.5V10.5A0.5,0.5 0 0,1 14.5,10H16.5A0.5,0.5 0 0,1 17,10.5V15.5A0.5,0.5 0 0,1 16.5,16H14.5Z" 
                                  Fill="#E50914"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="CINEDAM" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <TextBlock Text=" | Cartelera" 
                              FontSize="20" 
                              Foreground="#E50914"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnPerfilUsuario" 
                            Click="BtnPerfilUsuario_Click"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="0"
                            Margin="0,0,20,0"
                            Cursor="Hand"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <Viewbox Width="20" Height="20" Margin="0,0,8,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                                          Fill="White"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock x:Name="txtUsuario" 
                                      Text="Invitado" 
                                      FontSize="16" 
                                      Foreground="White"
                                      VerticalAlignment="Center"
                                      TextDecorations="Underline"/>
                        </StackPanel>
                    </Button>

                    <StackPanel x:Name="txtUsuarioInvitado" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0" Visibility="Visible">
                        <Viewbox Width="16" Height="16" Margin="0,0,6,0">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                                      Fill="White"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Invitado" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Button x:Name="btnCuentaAccion" 
                            Content="Iniciar Sesion" 
                            Click="BtnCuentaAccion_Click"
                            Background="#E50914"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="5"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F40612"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido Principal (mas claro que el header) -->
        <Grid Grid.Row="1">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#252526" Offset="0"/>
                    <GradientStop Color="#2D2D30" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Loading -->
            <StackPanel x:Name="pnlLoading" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Visibility="Visible">
                <Viewbox Width="100" Height="100">
                    <Canvas Width="100" Height="100">
                        <!-- Cuerpo del proyector -->
                        <Path Data="M20,10 L40,10 L40,50 L20,50 Z" Fill="#E50914"/>
                        <!-- Lente -->
                        <Ellipse Canvas.Left="35" Canvas.Top="20" Width="20" Height="20" Fill="#FFFFFF" Stroke="#E50914" StrokeThickness="2"/>
                        <!-- Carrete superior -->
                        <Ellipse Canvas.Left="50" Canvas.Top="5" Width="20" Height="20" Fill="#E50914" Stroke="#FFFFFF" StrokeThickness="1.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="0" CenterX="10" CenterY="10"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Ellipse.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <!-- Radios del carrete superior -->
                        <Line X1="60" Y1="15" X2="60" Y2="10" Stroke="#FFFFFF" StrokeThickness="1.5">
                            <Line.RenderTransform>
                                <RotateTransform Angle="0" CenterX="60" CenterY="15"/>
                            </Line.RenderTransform>
                            <Line.Triggers>
                                <EventTrigger RoutedEvent="Line.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Line.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Line.Triggers>
                        </Line>
                        <Line X1="60" Y1="15" X2="65" Y2="15" Stroke="#FFFFFF" StrokeThickness="1.5">
                            <Line.RenderTransform>
                                <RotateTransform Angle="0" CenterX="60" CenterY="15"/>
                            </Line.RenderTransform>
                            <Line.Triggers>
                                <EventTrigger RoutedEvent="Line.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Line.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Line.Triggers>
                        </Line>
                        <!-- Carrete inferior -->
                        <Ellipse Canvas.Left="50" Canvas.Top="35" Width="20" Height="20" Fill="#E50914" Stroke="#FFFFFF" StrokeThickness="1.5">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="0" CenterX="10" CenterY="10"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Ellipse.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Ellipse.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                        <!-- Radios del carrete inferior -->
                        <Line X1="60" Y1="45" X2="60" Y2="40" Stroke="#FFFFFF" StrokeThickness="1.5">
                            <Line.RenderTransform>
                                <RotateTransform Angle="0" CenterX="60" CenterY="45"/>
                            </Line.RenderTransform>
                            <Line.Triggers>
                                <EventTrigger RoutedEvent="Line.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Line.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Line.Triggers>
                        </Line>
                        <Line X1="60" Y1="45" X2="65" Y2="45" Stroke="#FFFFFF" StrokeThickness="1.5">
                            <Line.RenderTransform>
                                <RotateTransform Angle="0" CenterX="60" CenterY="45"/>
                            </Line.RenderTransform>
                            <Line.Triggers>
                                <EventTrigger RoutedEvent="Line.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever">
                                            <DoubleAnimation Storyboard.TargetProperty="(Line.RenderTransform).(RotateTransform.Angle)"
                                                           From="0" To="360" Duration="0:0:2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Line.Triggers>
                        </Line>
                        <!-- Haz de luz -->
                        <Path Data="M55,30 L85,20 L85,40 Z" Fill="#FFEB3B" Opacity="0.6"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="Un segundo, estamos cargando verdadero cine..." 
                          FontSize="18" 
                          Foreground="#B0B0B0"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Sin peliculas -->
            <StackPanel x:Name="pnlSinPeliculas" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Visibility="Collapsed">
                <Viewbox Width="80" Height="80" Opacity="0.3">
                    <Canvas Width="24" Height="24">
                        <Path Data="M18,4L20,8H17L15,4H13L15,8H12L10,4H8L10,8H7L5,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V4H18M9.5,16A0.5,0.5 0 0,1 9,15.5V10.5A0.5,0.5 0 0,1 9.5,10H11.5A0.5,0.5 0 0,1 12,10.5V15.5A0.5,0.5 0 0,1 11.5,16H9.5M14.5,16A0.5,0.5 0 0,1 14,15.5V10.5A0.5,0.5 0 0,1 14.5,10H16.5A0.5,0.5 0 0,1 17,10.5V15.5A0.5,0.5 0 0,1 16.5,16H14.5Z" 
                              Fill="#B0B0B0"/>
                    </Canvas>
                </Viewbox>
                <TextBlock Text="No hay peliculas disponibles" 
                          FontSize="18" 
                          Foreground="#B0B0B0"
                          HorizontalAlignment="Center"
                          Margin="0,20,0,0"/>
            </StackPanel>

            <!-- Grid de peliculas -->
            <ScrollViewer x:Name="scrollPeliculas" 
                         VerticalScrollBarVisibility="Auto"
                         Visibility="Collapsed">
                <ItemsControl x:Name="itemsPeliculas" Margin="20">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" 
                                     HorizontalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource PeliculaCardStyle}"
                                   Width="250"
                                   MouseLeftButtonDown="Pelicula_Click"
                                   Tag="{Binding Id}">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1" CenterX="125" CenterY="200"/>
                                </Border.RenderTransform>

                                <StackPanel>
                                    <!-- Imagen de la pelicula -->
                                    <Border Height="350" 
                                           Background="#3E3E42"
                                           CornerRadius="10,10,0,0">
                                        <Grid>
                                            <!-- Imagen -->
                                            <Image Source="{Binding ImagenUrl}" 
                                                  Stretch="UniformToFill"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                                            <!-- Placeholder si no hay imagen -->
                                            <Viewbox Width="80" Height="80">
                                                <Canvas Width="24" Height="24">
                                                    <Path Data="M18,4L20,8H17L15,4H13L15,8H12L10,4H8L10,8H7L5,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V4H18M9.5,16A0.5,0.5 0 0,1 9,15.5V10.5A0.5,0.5 0 0,1 9.5,10H11.5A0.5,0.5 0 0,1 12,10.5V15.5A0.5,0.5 0 0,1 11.5,16H9.5M14.5,16A0.5,0.5 0 0,1 14,15.5V10.5A0.5,0.5 0 0,1 14.5,10H16.5A0.5,0.5 0 0,1 17,10.5V15.5A0.5,0.5 0 0,1 16.5,16H14.5Z" 
                                                          Fill="#707070"/>
                                                </Canvas>
                                                <Viewbox.Style>
                                                    <Style TargetType="Viewbox">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ImagenUrl}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ImagenUrl}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Viewbox.Style>
                                            </Viewbox>
                                        </Grid>
                                    </Border>

                                    <!-- Informacion de la pelicula -->
                                    <Border Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Titulo}" 
                                                  FontSize="18" 
                                                  FontWeight="Bold"
                                                  TextWrapping="Wrap"
                                                  Foreground="#E0E0E0"
                                                  MaxHeight="50"
                                                  TextTrimming="CharacterEllipsis"/>

                                            <TextBlock Text="{Binding Genero}" 
                                                      FontSize="14" 
                                                      Foreground="#B0B0B0"
                                                      Margin="0,5,0,0"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <Viewbox Width="14" Height="14" Margin="0,0,5,0">
                                                    <Canvas Width="24" Height="24">
                                                        <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                                              Fill="#B0B0B0"/>
                                                    </Canvas>
                                                </Viewbox>
                                                <TextBlock FontSize="14" Foreground="#B0B0B0" VerticalAlignment="Center">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} min">
                                                            <Binding Path="Duracion"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Content="Ver Horarios" 
                                                   Background="#E50914"
                                                   Foreground="White"
                                                   BorderThickness="0"
                                                   Padding="10,8"
                                                   Margin="0,15,0,0"
                                                   FontWeight="SemiBold"
                                                   Cursor="Hand"
                                                   Click="BtnVerHorarios_Click"
                                                   Tag="{Binding Id}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                           CornerRadius="5"
                                                                           Padding="{TemplateBinding Padding}">
                                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                                        VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F40612"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>