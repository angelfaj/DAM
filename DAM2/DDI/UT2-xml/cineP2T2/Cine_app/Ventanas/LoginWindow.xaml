<Window x:Class="Cine_app.Ventanas.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesion - CineDAM" Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="500"
        MinWidth="400">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F0F0F" Offset="0"/>
                <GradientStop Color="#1A1A1A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Border VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Background="#1E1E1E"
                    CornerRadius="20"
                    Padding="40"
                    Width="380"
                    Margin="20"
                    BorderBrush="#2D2D30"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Logo/Icono -->
                    <Viewbox Width="80" Height="80" Margin="0,0,0,15">
                        <Canvas Width="24" Height="24">
                            <Path Data="M18,4L20,8H17L15,4H13L15,8H12L10,4H8L10,8H7L5,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V4H18M9.5,16A0.5,0.5 0 0,1 9,15.5V10.5A0.5,0.5 0 0,1 9.5,10H11.5A0.5,0.5 0 0,1 12,10.5V15.5A0.5,0.5 0 0,1 11.5,16H9.5M14.5,16A0.5,0.5 0 0,1 14,15.5V10.5A0.5,0.5 0 0,1 14.5,10H16.5A0.5,0.5 0 0,1 17,10.5V15.5A0.5,0.5 0 0,1 16.5,16H14.5Z" 
                                  Fill="#E50914"/>
                        </Canvas>
                    </Viewbox>

                    <TextBlock Text="CINEDAM" 
                              FontSize="28" 
                              FontWeight="Bold"
                              Foreground="#E50914"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>

                    <TextBlock Text="Log in" 
                              FontSize="18" 
                              Foreground="#A0A0A0"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,30"/>

                    <!-- Email -->
                    <TextBlock Text="Email" 
                              Foreground="#E0E0E0"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>

                    <TextBox x:Name="txtEmail"
                            Height="40"
                            Padding="10"
                            FontSize="14"
                            Margin="0,0,0,20"
                            Background="#2D2D30"
                            Foreground="#E0E0E0"
                            BorderBrush="#3F3F46"
                            BorderThickness="1"
                            VerticalContentAlignment="Center"
                            CaretBrush="#E0E0E0"/>

                    <!-- Password -->
                    <TextBlock Text="Contraseña" 
                              Foreground="#E0E0E0"
                              FontWeight="SemiBold"
                              Margin="0,0,0,5"/>

                    <PasswordBox x:Name="txtPassword"
                                Height="40"
                                Padding="10"
                                FontSize="14"
                                Margin="0,0,0,10"
                                Background="#2D2D30"
                                Foreground="#E0E0E0"
                                BorderBrush="#3F3F46"
                                BorderThickness="1"
                                VerticalContentAlignment="Center"
                                CaretBrush="#E0E0E0"
                                KeyDown="TxtPassword_KeyDown"/>

                    <!-- Mensaje de error -->
                    <TextBlock x:Name="txtMensaje"
                              Text=""
                              Foreground="#FF6B6B"
                              FontSize="12"
                              TextWrapping="Wrap"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"
                              Visibility="Collapsed"/>

                    <!-- Boton de Login -->
                    <Button x:Name="btnLogin"
                           Content="Iniciar sesión"
                           Click="BtnLogin_Click"
                           Height="45"
                           Margin="0,20,0,10"
                           Background="#E50914"
                           Foreground="White"
                           FontSize="16"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F40612"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Separador -->
                    <StackPanel Orientation="Horizontal" 
                               HorizontalAlignment="Center"
                               Margin="0,20,0,10">
                        <Line X1="0" X2="100" 
                             Stroke="#3F3F46" 
                             StrokeThickness="1"
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                        <TextBlock Text="o" Foreground="#A0A0A0"/>
                        <Line X1="0" X2="100" 
                             Stroke="#3F3F46" 
                             StrokeThickness="1"
                             VerticalAlignment="Center"
                             Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Boton de Registro -->
                    <Button Content="Crear cuenta"
                           Click="BtnRegistro_Click"
                           Height="40"
                           Background="Transparent"
                           Foreground="#E50914"
                           FontSize="14"
                           FontWeight="SemiBold"
                           BorderBrush="#E50914"
                           BorderThickness="2"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="10">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2D0A0D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>