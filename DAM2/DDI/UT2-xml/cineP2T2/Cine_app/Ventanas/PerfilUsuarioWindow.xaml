<Window x:Class="Cine_app.Ventanas.PerfilUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi Perfil - Cinema" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="600"
        MinWidth="900">
    <Window.Resources>
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2D2D30"/>
                    <Setter Property="Foreground" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="MenuButtonActiveStyle" BasedOn="{StaticResource MenuButtonStyle}">
            <Setter Property="Background" Value="#E50914"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel lateral izquierdo (más oscuro) -->
        <Border Grid.Column="0" Background="#1E1E1E" BorderBrush="#2D2D30" BorderThickness="0,0,1,0">
            <StackPanel>
                <Border Background="#16181A" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <Viewbox Width="60" Height="60" Margin="0,0,0,15">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                                      Fill="#E50914"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock x:Name="txtNombreUsuarioMenu" 
                                  Text="Usuario" 
                                  FontSize="16" 
                                  FontWeight="Bold"
                                  HorizontalAlignment="Center"
                                  Foreground="White"
                                  TextWrapping="Wrap"
                                  TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Button x:Name="btnMenuInformacion" 
                        Click="BtnMenuInformacion_Click"
                        Style="{StaticResource MenuButtonActiveStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="18" Height="18" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M11,7V13H13V7H11M11,15V17H13V15H11Z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Informacion Personal" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="btnMenuReservas" 
                        Click="BtnMenuReservas_Click"
                        Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="18" Height="18" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Path Data="M18,4L20,8H17L15,4H13L15,8H12L10,4H8L10,8H7L5,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V4H18M9.5,16A0.5,0.5 0 0,1 9,15.5V10.5A0.5,0.5 0 0,1 9.5,10H11.5A0.5,0.5 0 0,1 12,10.5V15.5A0.5,0.5 0 0,1 11.5,16H9.5M14.5,16A0.5,0.5 0 0,1 14,15.5V10.5A0.5,0.5 0 0,1 14.5,10H16.5A0.5,0.5 0 0,1 17,10.5V15.5A0.5,0.5 0 0,1 16.5,16H14.5Z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Mis Reservas" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Separator Background="#3F3F46" Margin="10,20"/>

                <Button Click="BtnVolver_Click"
                        Style="{StaticResource MenuButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="18" Height="18" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Volver" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Column="1" Background="#252526">
            <ScrollViewer x:Name="panelInformacion" 
                         VerticalScrollBarVisibility="Auto"
                         Visibility="Visible">
                <Border Background="#2D2D30" 
                       Margin="30"
                       Padding="40"
                       CornerRadius="10"
                       BorderBrush="#3F3F46"
                       BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Informacion Personal" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,30"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Nombre:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtNombre" 
                                          Text="" 
                                          FontSize="16"
                                          Foreground="#E0E0E0"
                                          Padding="10,8"
                                          Background="#1E1E1E"
                                          Margin="0,0,0,15"/>

                                <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtEmail" 
                                          Text="" 
                                          FontSize="16"
                                          Foreground="#E0E0E0"
                                          Padding="10,8"
                                          Background="#1E1E1E"
                                          Margin="0,0,0,15"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Apellidos:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtApellidos" 
                                          Text="" 
                                          FontSize="16"
                                          Foreground="#E0E0E0"
                                          Padding="10,8"
                                          Background="#1E1E1E"
                                          Margin="0,0,0,15"/>

                                <TextBlock Text="Telefono:" Style="{StaticResource LabelStyle}"/>
                                <TextBlock x:Name="txtTelefono" 
                                          Text="No especificado" 
                                          FontSize="16"
                                          Padding="10,8"
                                          Background="#1E1E1E"
                                          Foreground="#808080"
                                          Margin="0,0,0,15"/>
                            </StackPanel>
                        </Grid>

                        <Separator Background="#3F3F46" Margin="0,20"/>

                        <TextBlock Text="Cambiar Contrasena" 
                                  FontSize="20" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,20,0,20"/>

                        <TextBlock Text="Contrasena Actual:" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="txtPasswordActual"/>

                        <TextBlock Text="Nueva Contrasena:" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="txtNuevaPassword"/>

                        <TextBlock Text="Confirmar Nueva Contrasena:" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="txtConfirmarPassword"/>

                        <TextBlock x:Name="txtMensajePassword" 
                                  TextWrapping="Wrap"
                                  Margin="0,10,0,10"
                                  Visibility="Collapsed"
                                  Foreground="#FF6B6B"
                                  FontWeight="SemiBold"/>

                        <Button x:Name="btnCambiarPassword" 
                               Content="Cambiar Contrasena"
                               Click="BtnCambiarPassword_Click"
                               Background="#E50914"
                               Foreground="White"
                               BorderThickness="0"
                               Padding="20,12"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Cursor="Hand"
                               HorizontalAlignment="Left">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                       CornerRadius="5"
                                                       Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                    VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F40612"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </ScrollViewer>

            <ScrollViewer x:Name="panelReservas" 
                         VerticalScrollBarVisibility="Auto"
                         Visibility="Collapsed">
                <Border Background="#2D2D30" 
                       Margin="30"
                       Padding="40"
                       CornerRadius="10"
                       BorderBrush="#3F3F46"
                       BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="Mis Reservas" 
                                  FontSize="28" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  Margin="0,0,0,20"/>

                        <!-- Buscador -->
                        <Border Background="#1E1E1E" 
                               BorderBrush="#3F3F46" 
                               BorderThickness="1" 
                               CornerRadius="5"
                               Padding="10"
                               Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="txtBuscarReserva"
                                        Grid.Column="0"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        VerticalContentAlignment="Center"
                                        FontSize="14"
                                        Padding="5"
                                        TextChanged="TxtBuscarReserva_TextChanged"/>

                                <TextBlock Grid.Column="0"
                                          Text="Buscar pelicula por nombre..."
                                          Foreground="#808080"
                                          FontSize="14"
                                          VerticalAlignment="Center"
                                          Padding="5"
                                          IsHitTestVisible="False">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=txtBuscarReserva}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <Button x:Name="btnLimpiarBusqueda"
                                       Grid.Column="1"
                                       Content="✕"
                                       Background="Transparent"
                                       BorderThickness="0"
                                       Foreground="#808080"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Padding="10,0"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"
                                       Click="BtnLimpiarBusqueda_Click"
                                       Visibility="Collapsed">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#E50914"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </Border>

                        <StackPanel x:Name="pnlLoadingReservas" 
                                   Visibility="Visible"
                                   HorizontalAlignment="Center"
                                   Margin="0,50,0,0">
                            <Viewbox Width="80" Height="80">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                          Fill="#E50914">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="0" CenterX="12" CenterY="12"/>
                                        </Path.RenderTransform>
                                        <Path.Triggers>
                                            <EventTrigger RoutedEvent="Path.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                       From="0" To="360" Duration="0:0:2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Path.Triggers>
                                    </Path>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Cargando reservas..." 
                                      FontSize="16" 
                                      Foreground="#B0B0B0"
                                      HorizontalAlignment="Center"
                                      Margin="0,20,0,0"/>
                        </StackPanel>

                        <StackPanel x:Name="pnlSinReservas" 
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center"
                                   Margin="0,50,0,0">
                            <Viewbox Width="80" Height="80" Opacity="0.3">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M18,4L20,8H17L15,4H13L15,8H12L10,4H8L10,8H7L5,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V4H18M9.5,16A0.5,0.5 0 0,1 9,15.5V10.5A0.5,0.5 0 0,1 9.5,10H11.5A0.5,0.5 0 0,1 12,10.5V15.5A0.5,0.5 0 0,1 11.5,16H9.5M14.5,16A0.5,0.5 0 0,1 14,15.5V10.5A0.5,0.5 0 0,1 14.5,10H16.5A0.5,0.5 0 0,1 17,10.5V15.5A0.5,0.5 0 0,1 16.5,16H14.5Z" 
                                          Fill="#B0B0B0"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="No tienes reservas" 
                                      FontSize="20" 
                                      Foreground="#808080"
                                      HorizontalAlignment="Center"
                                      Margin="0,15,0,0"/>
                            <TextBlock Text="Explora nuestra cartelera y reserva tu pelicula favorita!" 
                                      FontSize="14" 
                                      Foreground="#707070"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                        </StackPanel>

                        <!-- Mensaje de busqueda sin resultados -->
                        <StackPanel x:Name="pnlSinResultados" 
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center"
                                   Margin="0,50,0,0">
                            <Viewbox Width="80" Height="80" Opacity="0.3">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" 
                                          Fill="#B0B0B0"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="No se encontraron reservas" 
                                      FontSize="20" 
                                      Foreground="#808080"
                                      HorizontalAlignment="Center"
                                      Margin="0,15,0,0"/>
                            <TextBlock x:Name="txtBusqueda"
                                      FontSize="14" 
                                      Foreground="#707070"
                                      HorizontalAlignment="Center"
                                      Margin="0,10,0,0"/>
                        </StackPanel>

                        <ItemsControl x:Name="itemsReservas" Visibility="Collapsed">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" 
                                           Padding="20" 
                                           Margin="0,0,0,20"
                                           CornerRadius="8"
                                           BorderBrush="#3F3F46"
                                           BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" 
                                                   CornerRadius="5"
                                                   Background="#3E3E42"
                                                   Width="100"
                                                   Height="140">
                                                <Image Source="{Binding Sesion.Pelicula.ImagenUrl, Mode=OneWay}" 
                                                      Stretch="UniformToFill"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" Margin="20,0,20,0">
                                                <TextBlock Text="{Binding Sesion.Pelicula.Titulo, Mode=OneWay}" 
                                                          FontSize="20" 
                                                          FontWeight="Bold"
                                                          Foreground="White"
                                                          Margin="0,0,0,10"/>

                                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                                    <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                                                        <Canvas Width="24" Height="24">
                                                            <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" 
                                                                  Fill="#B0B0B0"/>
                                                        </Canvas>
                                                    </Viewbox>
                                                    <TextBlock Text="{Binding Sesion.FechaHora, StringFormat='dddd, dd MMMM yyyy', Mode=OneWay}" 
                                                              FontSize="14"
                                                              Foreground="#B0B0B0"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                                    <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                                                        <Canvas Width="24" Height="24">
                                                            <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                                                  Fill="#E50914"/>
                                                        </Canvas>
                                                    </Viewbox>
                                                    <TextBlock Text="{Binding Sesion.FechaHora, StringFormat='HH:mm', Mode=OneWay}" 
                                                              FontSize="14"
                                                              FontWeight="SemiBold"
                                                              Foreground="#E0E0E0"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                                    <Viewbox Width="16" Height="16" Margin="0,0,8,0">
                                                        <Canvas Width="24" Height="24">
                                                            <Path Data="M16,13C15.71,13 15.38,13 15.03,13.05C16.19,13.89 17,15 17,16.5V19H23V16.5C23,14.17 18.33,13 16,13M8,13C5.67,13 1,14.17 1,16.5V19H15V16.5C15,14.17 10.33,13 8,13M8,11A3,3 0 0,0 11,8A3,3 0 0,0 8,5A3,3 0 0,0 5,8A3,3 0 0,0 8,11M16,11A3,3 0 0,0 19,8A3,3 0 0,0 16,5A3,3 0 0,0 13,8A3,3 0 0,0 16,11Z" 
                                                                  Fill="#B0B0B0"/>
                                                        </Canvas>
                                                    </Viewbox>
                                                    <TextBlock Text="{Binding Sesion.Sala.Nombre, Mode=OneWay}" 
                                                              FontSize="14"
                                                              Foreground="#B0B0B0"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                    <TextBlock Text="Butacas: " 
                                                              FontWeight="SemiBold"
                                                              FontSize="14"
                                                              Foreground="#E0E0E0"/>
                                                    <TextBlock Text="{Binding Butacas, Mode=OneWay}"
                                                              FontSize="14"
                                                              Foreground="#B0B0B0"/>
                                                </StackPanel>

                                                <TextBlock FontSize="16"
                                                           FontWeight="Bold"
                                                      Foreground="#E50914"
                                                      Margin="0,10,0,0">
                                                <Run Text="Total: "/>
                                                <Run Text="{Binding Total, StringFormat='{}{0:F2}', Mode=OneWay}"/>
                                                <Run Text="€"/>
                                                </TextBlock>

                                                <TextBlock Text="{Binding CodigoReserva, StringFormat='Codigo: {0}', Mode=OneWay}" 
                                                      FontSize="12" 
                                                      Foreground="#707070"
                                                      Margin="0,5,0,0"/>
                                            </StackPanel>

                                            <!-- Botón Eliminar -->
                                            <Button Grid.Column="2"
                                               VerticalAlignment="Center"
                                               Background="#E50914"
                                               Foreground="White"
                                               BorderThickness="0"
                                               Padding="15,10"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Cursor="Hand"
                                               Click="BtnEliminarReserva_Click"
                                               Tag="{Binding Id}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" 
                                                                       CornerRadius="5"
                                                                       Padding="{TemplateBinding Padding}">
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <Viewbox Width="16" Height="16" Margin="0,0,6,0">
                                                                                <Canvas Width="24" Height="24">
                                                                                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" 
                                                                                      Fill="{TemplateBinding Foreground}"/>
                                                                                </Canvas>
                                                                            </Viewbox>
                                                                            <ContentPresenter VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#C70812"/>
