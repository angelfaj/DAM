<Window x:Class="Cine_app.Ventanas.SeleccionSesionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="Seleccionar Sesion" Height="750" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="SesionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#E50914"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}"
                               CornerRadius="5"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E50914"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#252526">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header con info de pelicula -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="20" BorderBrush="#2D2D30" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Imagen pequena de la pelicula -->
                <Border Width="80" Height="120" 
                       Background="#3E3E42"
                       CornerRadius="5"
                       Margin="0,0,20,0">
                    <Image x:Name="imgPelicula" 
                          Stretch="UniformToFill"/>
                </Border>

                <!-- Info de la pelicula -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="txtTitulo" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock x:Name="txtInfo" 
                              FontSize="14" 
                              Foreground="#B0B0B0"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Boton cerrar -->
                <Button Grid.Column="2" 
                       Content="✕" 
                       Click="BtnCerrar_Click"
                       Background="Transparent"
                       Foreground="#B0B0B0"
                       BorderThickness="0"
                       FontSize="24"
                       FontWeight="Bold"
                       Width="40"
                       Height="40"
                       Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E50914"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="550"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Calendario -->
            <Border Grid.Column="0" 
                   Background="#2D2D30" 
                   CornerRadius="10" 
                   Padding="20"
                   Margin="0,0,10,0"
                   VerticalAlignment="Top"
                   BorderBrush="#3F3F46"
                   BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                </Border.Effect>

                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Viewbox Width="24" Height="24" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" 
                                      Fill="#E50914"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Selecciona una fecha" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <Calendar x:Name="calendario"
                             SelectedDatesChanged="Calendario_SelectedDatesChanged"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Top"
                             FontSize="16"
                             Background="#2D2D30"
                             Foreground="#E0E0E0"
                             BorderBrush="#3F3F46">
                        <Calendar.CalendarDayButtonStyle>
                            <Style TargetType="CalendarDayButton">
                                <Setter Property="Width" Value="60"/>
                                <Setter Property="Height" Value="55"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="3"/>
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsToday" Value="True">
                                        <Setter Property="Background" Value="#3F3F46"/>
                                        <Setter Property="Foreground" Value="#E50914"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E50914"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Calendar.CalendarDayButtonStyle>
                        <Calendar.CalendarButtonStyle>
                            <Style TargetType="CalendarButton">
                                <Setter Property="Background" Value="#1E1E1E"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Style>
                        </Calendar.CalendarButtonStyle>
                    </Calendar>
                </StackPanel>
            </Border>

            <!-- Panel de sesiones -->
            <Border Grid.Column="1" 
                   Background="#2D2D30" 
                   CornerRadius="10" 
                   Padding="20"
                   Margin="10,0,0,0"
                   BorderBrush="#3F3F46"
                   BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Titulo -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <Viewbox Width="24" Height="24" Margin="0,0,10,0">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                      Fill="#E50914"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Horarios disponibles" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Foreground="White"
                                  VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Loading -->
                    <StackPanel x:Name="pnlLoadingSesiones" 
                               Grid.Row="1"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Visibility="Collapsed">
                        <Viewbox Width="60" Height="60">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                      Fill="#E50914">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="0" CenterX="12" CenterY="12"/>
                                    </Path.RenderTransform>
                                    <Path.Triggers>
                                        <EventTrigger RoutedEvent="Path.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                   From="0" To="360" Duration="0:0:2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Path.Triggers>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Cargando sesiones..." 
                                  FontSize="14" 
                                  Foreground="#B0B0B0"
                                  HorizontalAlignment="Center"
                                  Margin="0,15,0,0"/>
                    </StackPanel>

                    <!-- Sin sesiones -->
                    <StackPanel x:Name="pnlSinSesiones" 
                               Grid.Row="1"
                               VerticalAlignment="Center" 
                               HorizontalAlignment="Center"
                               Visibility="Collapsed">
                        <Viewbox Width="60" Height="60" Opacity="0.3">
                            <Canvas Width="24" Height="24">
                                <Path Data="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" 
                                      Fill="#B0B0B0"/>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="No hay sesiones disponibles" 
                                  FontSize="14" 
                                  Foreground="#808080"
                                  TextAlignment="Center"
                                  HorizontalAlignment="Center"
                                  Margin="0,15,0,0"/>
                        <TextBlock Text="para esta fecha" 
                                  FontSize="14" 
                                  Foreground="#808080"
                                  TextAlignment="Center"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Lista de sesiones -->
                    <ScrollViewer Grid.Row="1" 
                                 x:Name="scrollSesiones"
                                 VerticalScrollBarVisibility="Auto"
                                 Visibility="Collapsed"
                                 Padding="0,0,10,0">
                        <ItemsControl x:Name="itemsSesiones">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" 
                                           CornerRadius="8" 
                                           Padding="15" 
                                           Margin="0,0,0,15"
                                           BorderBrush="#3F3F46"
                                           BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <Viewbox Width="24" Height="24" Margin="0,0,10,0">
                                                        <Canvas Width="24" Height="24">
                                                            <Path Data="M12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22C6.47,22 2,17.5 2,12A10,10 0 0,1 12,2M12.5,7V12.25L17,14.92L16.25,16.15L11,13V7H12.5Z" 
                                                                  Fill="#E50914"/>
                                                        </Canvas>
                                                    </Viewbox>
                                                    <TextBlock Text="{Binding FechaHora, StringFormat='{}{0:HH:mm}'}"
                                                              FontSize="20" 
                                                              FontWeight="Bold" 
                                                              Foreground="White"
                                                              VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock FontSize="14" Foreground="#B0B0B0" Margin="0,8,0,0">
                                                    <Run Text="Sala: "/>
                                                    <Run Text="{Binding Sala.Nombre}" FontWeight="SemiBold" Foreground="#E0E0E0"/>
                                                </TextBlock>
                                                <TextBlock FontSize="16" Foreground="#E50914" FontWeight="Bold" Margin="0,8,0,0">
                                                    <Run Text="{Binding Precio, StringFormat='{}{0:F2}'}"/>
                                                    <Run Text=" €" FontSize="14"/>
                                                    <Run Text=" / butaca" FontSize="12" FontWeight="Normal" Foreground="#B0B0B0"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                   Content="Seleccionar"
                                                   Style="{StaticResource SesionButtonStyle}"
                                                   Click="BtnSeleccionarSesion_Click"
                                                   Tag="{Binding}"
                                                   VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>