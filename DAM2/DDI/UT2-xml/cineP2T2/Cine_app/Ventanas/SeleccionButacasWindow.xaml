<Window x:Class="Cine_app.Ventanas.SeleccionButacasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleccionar Butacas - Cinema" Height="850" Width="1300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="700"
        MinWidth="1000">
    <Window.Resources>
        <!-- Estilo para butaca normal -->
        <Style x:Key="ButacaNormalStyle" TargetType="Button">
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                BorderThickness="2"
                                BorderBrush="Transparent">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para butaca VIP -->
        <Style x:Key="ButacaVIPStyle" TargetType="Button" BasedOn="{StaticResource ButacaNormalStyle}">
            <Setter Property="Background" Value="#FFD700"/>
            <Setter Property="Foreground" Value="#1E1E1E"/>
        </Style>

        <!-- Estilo para butaca discapacitado -->
        <Style x:Key="ButacaDiscapacitadoStyle" TargetType="Button" BasedOn="{StaticResource ButacaNormalStyle}">
            <Setter Property="Background" Value="#2196F3"/>
        </Style>

        <!-- Estilo para butaca ocupada -->
        <Style x:Key="ButacaOcupadaStyle" TargetType="Button" BasedOn="{StaticResource ButacaNormalStyle}">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="#707070"/>
            <Setter Property="Cursor" Value="No"/>
            <Setter Property="IsEnabled" Value="False"/>
        </Style>

        <!-- Estilo para butaca seleccionada -->
        <Style x:Key="ButacaSeleccionadaStyle" TargetType="Button" BasedOn="{StaticResource ButacaNormalStyle}">
            <Setter Property="Background" Value="#E50914"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1E1E1E" Padding="20" BorderBrush="#2D2D30" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="txtTituloPelicula" 
                              Text="Pelicula" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Foreground="White"/>
                    <TextBlock x:Name="txtInfoSesion" 
                              Text="Sesion Info" 
                              FontSize="14" 
                              Foreground="#B0B0B0"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <Button x:Name="btnCerrar" 
                        Grid.Column="1"
                        Content="✕"
                        Click="BtnCerrar_Click"
                        Background="Transparent"
                        Foreground="#B0B0B0"
                        BorderThickness="0"
                        FontSize="24"
                        FontWeight="Bold"
                        Width="40"
                        Height="40"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E50914"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido Principal -->
        <Grid Grid.Row="1" Background="#252526">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="320"/>
            </Grid.ColumnDefinitions>

            <!-- Area de butacas -->
            <ScrollViewer Grid.Column="0" 
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         Margin="20">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Pantalla -->
                    <Border Background="#1E1E1E" 
                           Height="60" 
                           CornerRadius="10"
                           Margin="0,0,0,40"
                           Width="650"
                           BorderBrush="#E50914"
                           BorderThickness="2">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.6" Color="#E50914"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Viewbox Width="28" Height="28" Margin="0,0,12,0">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M18,4L20,8H17L15,4H13L15,8H12L10,4H8L10,8H7L5,4H4A2,2 0 0,0 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V4H18M9.5,16A0.5,0.5 0 0,1 9,15.5V10.5A0.5,0.5 0 0,1 9.5,10H11.5A0.5,0.5 0 0,1 12,10.5V15.5A0.5,0.5 0 0,1 11.5,16H9.5M14.5,16A0.5,0.5 0 0,1 14,15.5V10.5A0.5,0.5 0 0,1 14.5,10H16.5A0.5,0.5 0 0,1 17,10.5V15.5A0.5,0.5 0 0,1 16.5,16H14.5Z" 
                                          Fill="#E50914"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="PANTALLA" 
                                      FontSize="22" 
                                      FontWeight="Bold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Loading -->
                    <StackPanel x:Name="pnlLoading" 
                               Visibility="Visible"
                               HorizontalAlignment="Center"
                               Margin="0,50,0,0">
                        <Viewbox Width="80" Height="80">
                            <Canvas Width="24" Height="24">
                                <Path Data="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M13,7H11V13H13V7M13,15H11V17H13V15Z" 
                                      Fill="#E50914">
                                    <Path.RenderTransform>
                                        <RotateTransform Angle="0" CenterX="12" CenterY="12"/>
                                    </Path.RenderTransform>
                                    <Path.Triggers>
                                        <EventTrigger RoutedEvent="Path.Loaded">
                                            <BeginStoryboard>
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                                   From="0" To="360" Duration="0:0:2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Path.Triggers>
                                </Path>
                            </Canvas>
                        </Viewbox>
                        <TextBlock Text="Cargando butacas..." 
                                  FontSize="16" 
                                  Foreground="#B0B0B0"
                                  HorizontalAlignment="Center"
                                  Margin="0,20,0,0"/>
                    </StackPanel>

                    <!-- Grid de butacas -->
                    <ItemsControl x:Name="itemsButacas" Visibility="Collapsed">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Panel lateral derecho -->
            <Border Grid.Column="1" 
                   Background="#2D2D30" 
                   BorderBrush="#3F3F46" 
                   BorderThickness="1,0,0,0"
                   Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="Resumen de Reserva" 
                              FontSize="20" 
                              FontWeight="Bold"
                              Foreground="White"
                              Margin="0,0,0,20"/>

                    <!-- Leyenda de colores -->
                    <TextBlock Text="Leyenda:" 
                              FontWeight="SemiBold"
                              FontSize="14"
                              Foreground="#E0E0E0"
                              Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <Border Background="#4CAF50" 
                               Width="24" Height="24" 
                               CornerRadius="5"
                               Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Disponible" 
                                      VerticalAlignment="Center" 
                                      FontWeight="SemiBold"
                                      Foreground="#E0E0E0"/>
                            <TextBlock x:Name="txtPrecioNormal" 
                                      Text="Precio base" 
                                      FontSize="11" 
                                      Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <Border Background="#FFD700" 
                               Width="24" Height="24" 
                               CornerRadius="5"
                               Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="VIP" 
                                      VerticalAlignment="Center" 
                                      FontWeight="SemiBold"
                                      Foreground="#E0E0E0"/>
                            <TextBlock x:Name="txtPrecioVIP" 
                                      Text="+3.00 €" 
                                      FontSize="11" 
                                      Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <Border Background="#2196F3" 
                               Width="24" Height="24" 
                               CornerRadius="5"
                               Margin="0,0,10,0"/>
                        <StackPanel>
                            <TextBlock Text="Discapacitado" 
                                      VerticalAlignment="Center" 
                                      FontWeight="SemiBold"
                                      Foreground="#E0E0E0"/>
                            <TextBlock x:Name="txtPrecioDiscapacitado" 
                                      Text="Precio base" 
                                      FontSize="11" 
                                      Foreground="#808080"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8">
                        <Border Background="#E50914" 
                               Width="24" Height="24" 
                               CornerRadius="5"
                               Margin="0,0,10,0"/>
                        <TextBlock Text="Seleccionada" 
                                  VerticalAlignment="Center" 
                                  FontWeight="SemiBold"
                                  Foreground="#E0E0E0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,20">
                        <Border Background="#3E3E42" 
                               Width="24" Height="24" 
                               CornerRadius="5"
                               Margin="0,0,10,0"/>
                        <TextBlock Text="Ocupada" 
                                  VerticalAlignment="Center" 
                                  FontWeight="SemiBold"
                                  Foreground="#808080"/>
                    </StackPanel>

                    <Separator Background="#3F3F46" Margin="0,10"/>

                    <!-- Butacas seleccionadas -->
                    <TextBlock Text="Butacas Seleccionadas:" 
                              FontWeight="SemiBold"
                              Foreground="#E0E0E0"
                              Margin="0,15,0,8"/>
                    <Border Background="#1E1E1E" 
                           Padding="10" 
                           CornerRadius="5"
                           BorderBrush="#3F3F46"
                           BorderThickness="1"
                           MinHeight="50"
                           Margin="0,0,0,15">
                        <TextBlock x:Name="txtButacasSeleccionadas" 
                                  Text="Ninguna"
                                  Foreground="#808080"
                                  TextWrapping="Wrap"/>
                    </Border>

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Cantidad:" 
                                      FontWeight="SemiBold"
                                      Foreground="#E0E0E0"
                                      FontSize="12"/>
                            <TextBlock x:Name="txtCantidad" 
                                      Text="0 butacas"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#E50914"
                                      Margin="0,3,0,0"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Precio/butaca:" 
                                      FontWeight="SemiBold"
                                      Foreground="#E0E0E0"
                                      FontSize="12"/>
                            <TextBlock x:Name="txtPrecioUnitario" 
                                      Text="0,00 €"
                                      FontSize="16"
                                      FontWeight="Bold"
                                      Foreground="#B0B0B0"
                                      Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>

                    <Separator Background="#3F3F46" Margin="0,15"/>

                    <TextBlock Text="Total a Pagar:" 
                              FontWeight="Bold"
                              FontSize="16"
                              Foreground="#E0E0E0"
                              Margin="0,15,0,5"/>
                    <TextBlock x:Name="txtTotal" 
                              Text="0,00 €"
                              FontSize="32"
                              FontWeight="Bold"
                              Foreground="#E50914"
                              Margin="0,0,0,25"/>

                    <Button x:Name="btnConfirmarReserva" 
                           Content="Confirmar Reserva"
                           Click="BtnConfirmarReserva_Click"
                           Background="#E50914"
                           Foreground="White"
                           BorderThickness="0"
                           Padding="15,14"
                           FontSize="16"
                           FontWeight="Bold"
                           Cursor="Hand"
                           IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Opacity" Value="1"/>
                                <Style.Triggers>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="0.5"/>
                                        <Setter Property="Background" Value="#3E3E42"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F40612"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="* Selecciona al menos una butaca" 
                              FontSize="11"
                              Foreground="#707070"
                              TextAlignment="Center"
                              Margin="0,10,0,0"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>