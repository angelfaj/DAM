<Window x:Class="Cine_app.Ventanas.RegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro - CineDAM" Height="650" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="#E0E0E0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#252526" Offset="0"/>
                <GradientStop Color="#2D2D30" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="#1E1E1E" 
                    CornerRadius="15" 
                    Padding="40"
                    MaxWidth="400"
                    VerticalAlignment="Center"
                    Margin="20"
                    BorderBrush="#2D2D30"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
                </Border.Effect>

                <StackPanel>
                    <Viewbox Width="60" Height="60" Margin="0,0,0,10">
                        <Canvas Width="24" Height="24">
                            <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" 
                                  Fill="#E50914"/>
                            <Path Data="M15,14C17.67,14 23,15.33 23,18V20H7V18C7,15.33 12.33,14 15,14M15,12A4,4 0 0,1 11,8A4,4 0 0,1 15,4A4,4 0 0,1 19,8A4,4 0 0,1 15,12Z" 
                                  Fill="#E50914" Opacity="0.5"/>
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Crear Cuenta" 
                              FontSize="28" 
                              FontWeight="Bold"
                              HorizontalAlignment="Center"
                              Foreground="White"
                              Margin="0,0,0,5"/>
                    <TextBlock Text="Completa tus datos para registrarte" 
                              FontSize="14" 
                              HorizontalAlignment="Center"
                              Foreground="#B0B0B0"
                              Margin="0,0,0,25"/>

                    <TextBlock Text="Nombre:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtNombre" />

                    <TextBlock Text="Apellidos:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtApellidos" />

                    <TextBlock Text="Email:" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtEmail" />

                    <TextBlock Text="Telefono (opcional):" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="txtTelefono" />

                    <TextBlock Text="Contrasena:" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="txtPassword" />

                    <TextBlock Text="Confirmar Contrasena:" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox x:Name="txtConfirmarPassword" />

                    <TextBlock x:Name="txtMensaje" 
                              TextWrapping="Wrap"
                              Margin="0,10,0,0"
                              Visibility="Collapsed"
                              FontWeight="SemiBold"
                              Foreground="#FF6B6B"/>

                    <Button x:Name="btnRegistrar" 
                            Content="Registrarse" 
                            Click="BtnRegistrar_Click"
                            Background="#E50914"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold"
                            Margin="0,20,0,0">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F40612"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="btnCancelar" 
                            Content="Cancelar" 
                            Click="BtnCancelar_Click"
                            Background="Transparent"
                            Foreground="#B0B0B0"
                            BorderBrush="#3F3F46"
                            BorderThickness="2">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="8"
                                                   Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" 
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2D2D30"/>
                                        <Setter Property="BorderBrush" Value="#E50914"/>
                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="* Todos los campos son obligatorios excepto el telefono" 
                              FontSize="11"
                              Foreground="#808080"
                              TextWrapping="Wrap"
                              Margin="0,15,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>