<Window x:Class="ej5_formulario_P1T2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ej5_formulario_P1T2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Nombre de usuario" Margin="10"/>
            <TextBox Name="txtUsername" Width="200" Margin="10"/>
            <TextBlock Text="Contraseña" Margin="10"/>
            <PasswordBox Name="pwdPassword" Width="200" Margin="10"/>
            <Button Content="Iniciar Sesión" Width="100" Height="30" Margin="10"
Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
